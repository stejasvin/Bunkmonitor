<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/clist_layout"
    android:paddingTop="5sp"
    android:paddingBottom="10sp"
    android:paddingLeft="25sp"
    android:paddingRight="25sp"
    android:background="@drawable/note1"
    android:gravity="center"
    >

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginLeft="10sp"
            android:paddingBottom="10sp">

            <TextView
                android:id="@+id/clist_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="c"
                android:layout_gravity="center"
                 />

        <TextView
            android:id="@+id/clist_slot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingTop="5sp"
            android:text="c"
            android:layout_gravity="center"
            />

            <TextView
                android:id="@+id/clist_bunked"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingTop="5sp"
                android:paddingBottom="10sp"
                android:text="bunks left - 5;jkjlkjljkl hjl kjlkj;j; j;ojguyg"
                />

        <TextView
            android:id="@+id/clist_tv_progress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingTop="5sp"
            android:text="Course Progress - 65%"
            android:visibility="gone"
            />


        <ProgressBar
            android:id="@+id/clist_pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="12sp"
            android:indeterminate="false"
            android:maxHeight="10dip"
            android:minHeight="10dip"
            android:layout_marginRight="10sp"
            android:progress="90"
            android:progressDrawable="@drawable/greenprogress"
            android:paddingBottom="10sp"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="0"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:paddingRight="10sp"
        >

        <ImageView
            android:layout_width="80sp"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:id="@+id/clist_hm"
            android:src="@drawable/hangman_1"/>


    </LinearLayout>

</LinearLayout>