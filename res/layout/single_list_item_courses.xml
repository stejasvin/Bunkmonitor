<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/clist_layout"
    android:paddingTop="10sp"
    android:paddingBottom="20sp"
    android:paddingLeft="25sp"
    android:paddingRight="25sp"
    android:background="@drawable/note1"
    android:gravity="center"
    >

    <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/clist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="course"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/clist_bunked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:text="bunks left - 5"
                android:layout_below="@+id/clist_name"
                android:layout_alignLeft="@+id/clist_name" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="10sp">

        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:id="@+id/clist_hm"/>


    </LinearLayout>

</LinearLayout>