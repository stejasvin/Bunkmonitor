<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/clist_layout"
    android:paddingLeft="25sp"
    android:paddingRight="25sp"
    android:paddingTop="5sp"
    android:paddingBottom="20sp"

    >

    <TextView
        android:id="@+id/clist1_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bunk Stats"
        android:textStyle="bold"
        android:paddingLeft="10sp"
        android:textSize="20sp"
        android:gravity="left" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5sp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="20sp"
            android:text="'Date-less' bunks"
            android:layout_marginBottom="5sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clist1_ll5"
            android:orientation="horizontal"
            android:paddingTop="5sp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/clist1_udbunk_tv"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="40sp"
                android:text="5"
                android:layout_margin="10sp"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/up_selector"
                    android:id="@+id/clist1_udbunk_inc" />

                <Button
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/down_selector"
                    android:id="@+id/clist1_udbunk_dec" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/clist1_nob"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Keep it up! No bunks 'yet' ;)"
        android:textSize="20sp"
        android:gravity="center"
        android:visibility="gone"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clist1_ll4"
        android:orientation="horizontal"
        android:paddingTop="5sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/clist1_ll3"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="10sp"
            android:paddingBottom="15sp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:id="@+id/clist1_llb"
                android:orientation="horizontal"
                android:layout_marginRight="10sp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Bunk Dates"
                    android:layout_gravity="center"
                    android:id="@+id/textView_bd"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"/>


                <Button
                    android:id="@+id/clist1_addb"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/plus_pencil_180px"
                    android:layout_marginTop="10sp"
                    android:padding="15sp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/clist1_delb"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/delete"
                    android:layout_marginTop="10sp"
                    android:padding="15sp"
                    android:layout_marginLeft="10sp"
                    android:gravity="center"/>


            </LinearLayout>


            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clist1_llb">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clist1_ll"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/textView" >


            </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


