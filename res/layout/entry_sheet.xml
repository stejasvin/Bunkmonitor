<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chalk_board"
    android:padding="20sp">

    <!-- This layout should be same a that in single_list_item_entry for alignment -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">

        <com.example.bunkmonitor.MyTextView
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:text="Course"
            android:textSize="35sp"
            android:layout_weight="3"
            android:gravity="center"/>

        <com.example.bunkmonitor.MyTextView
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:text="A"
            android:textSize="35sp"
            android:layout_weight="1"
            android:gravity="center"/>

        <com.example.bunkmonitor.MyTextView
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:text="B"
            android:textSize="35sp"
            android:layout_weight="1"
            android:gravity="center"/>

        <com.example.bunkmonitor.MyTextView
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:text="C"
            android:textSize="35sp"
            android:layout_weight="1"
            android:gravity="center"/>

        </LinearLayout>

    <ListView
        android:id="@+id/listview1"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="5"/>

    <LinearLayout
        android:layout_height="0sp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/es_b_done"
            android:layout_height="50sp"
            android:layout_width="100sp"

            android:background="@drawable/done_selector"/>
        </LinearLayout>

</LinearLayout>