<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chalk_board">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Edit Slots"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:text="Slots"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:text="M"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:text="T"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:text="W"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:text="T"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:text="F"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:text="S"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:text="S"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="A"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"/>

                <CheckBox
                    android:id="@+id/cb_11"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <CheckBox
                    android:id="@+id/cb_12"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <CheckBox
                    android:id="@+id/cb_13"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <CheckBox
                    android:id="@+id/cb_14"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <CheckBox
                    android:id="@+id/cb_15"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <CheckBox
                    android:id="@+id/cb_16"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                <CheckBox
                    android:id="@+id/cb_17"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="B"
                android:textColor="@android:color/white" />


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="C"
                android:textColor="@android:color/white" />


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="D"
                android:textColor="@android:color/white" />


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="E"
                android:textColor="@android:color/white" />


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="G"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="P"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Q"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="R"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="S"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Extras"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/slots_done"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Done" />


</LinearLayout>